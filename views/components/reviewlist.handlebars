{{#each review}}
<div style='margin: 20px 0 30px 0;'>
	<a href='/products/{{target}}' class='showForAdmin' style='display: none;'>{{type}}</a>
	<p style='font-size: 16pt;'>{{message}}</p>
	<p style='font-size: 14pt; margin-left: 70%;'><b>{{name}}</b><a href='#' title='Удалить' style='display: none;' class='deleteReview redLink commandLink showForAdmin' data-id='{{_id}}'><span class='glyphicon glyphicon-trash'/></a></p>
	<p style='font-size: 14pt;  margin-left: 70%;'><b>{{email}}</b></p>
	<p style='font-size: 10pt;  margin-left: 70%;'><i>{{date}}</i></p>
</div>
{{/each}}