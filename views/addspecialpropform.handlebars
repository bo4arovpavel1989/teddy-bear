<form id="addSpecialProp"  action="/admin/addspecialprop" method="post" style="margin-left: 5%;">
    <div class="form-group">
		<div class="input-group">
			<input type="login" class="form-control" id="inputName" name='name' placeholder="Название" required>
		</div>
	</div>
	<div class="form-group">
		<select name='category' id='productAddCategory' class='form-control'>
		<option class='productAddCategory' value='0'>Выберите категорию</option>
		{{#each category}}
		<option class='productAddCategory' value='{{_id}}'>{{name}}</option>
		{{/each}}
		</select>
	</div>
    <div class="form-group">
		<input class="btn btn-primary" type="submit" value="Добавить"></input>
		<a href='#' class='btn btn-default' onclick='$("#showAddProductForm").trigger("click"); return false;'>отмена</a>
 </div>
</form>