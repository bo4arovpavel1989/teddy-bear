<form id="addSpecialPropForProduct" class='col-md-3' action="/admin/addspecialpropforproduct" method="post" style="margin-left: 5%;">
    <div class="form-group">
		<div class="input-group">
			<input type="text" class="form-control" id="inputDescribe" name='describe' placeholder="Описание" required>
		</div>
	</div>
	<div class="form-group">
		<select name='product' id='addPropForProduct' class='form-control'>
		<option class='productAdd' value='0'>Выберите товар</option>
		{{#each product}}
		<option class='propAddProduct' value='{{_id}}'>{{name}}</option>
		{{/each}}
		</select>
	</div>
	 <div class="form-group">
		<div class="input-group">
			<input type="date" class="form-control" id="inputDescribe" name='toDate' placeholder="Дата" required>
		</div>
	</div>
	 <div class="form-group">
		<div class="input-group">
			<input type="number" class="form-control" id="inputDescribe" name='discount' placeholder="Скидка" required>
		</div>
	</div>
    <div class="form-group">
		<input class="btn btn-primary" type="submit" value="Добавить"></input>
		<a href='#' class='btn btn-default' onclick='$("#addSpecialPropFormPlace").empty().toggleClass("hidden"); return false;'>отмена</a>
 </div>
</form>